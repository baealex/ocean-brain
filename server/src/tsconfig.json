{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node16",
        "baseUrl": "src",
        "target": "ES2022",
        "module": "Node16",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "paths": {
            "~/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "tsx": {
        "tsconfig": "./tsconfig.json"
    }
}
